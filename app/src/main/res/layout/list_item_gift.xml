<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp"
    android:background="@drawable/bg_white_line">

    <TextView
        android:layout_marginTop="8dp"
        android:text="tu regalo"
        android:id="@+id/nameGift"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <ImageButton
        android:layout_marginRight="8dp"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_description_black_24dp"
        android:id="@+id/descriptionBtn" />

    <ImageButton
        android:layout_marginLeft="8dp"
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_delete_forever_black_24dp"
        android:id="@+id/deleteBtn" />

</LinearLayout>