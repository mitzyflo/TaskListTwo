<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.mflo.tasklisttwo.views.InfoActivity">

    <RadioButton
        android:id="@+id/sofia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sofia"
        android:textSize="16dp"
        android:layout_margin="5dp"/>

    <RadioButton
        android:id="@+id/martina"
        android:layout_below="@+id/sofia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Martina"
        android:textSize="16dp"
        android:layout_margin="5dp"/>

    <RadioButton
        android:id="@+id/bastian"
        android:layout_below="@+id/martina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bastian"
        android:textSize="16dp"
        android:layout_margin="5dp"/>

    <RadioButton
        android:id="@+id/julio"
        android:layout_below="@+id/bastian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Julio"
        android:textSize="16dp"
        android:layout_margin="5dp"/>

    <RadioButton
        android:id="@+id/paula"
        android:layout_below="@+id/julio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paula"
        android:textSize="16dp"
        android:layout_margin="5dp"/>

    <RadioButton
        android:id="@+id/cristian"
        android:layout_below="@+id/paula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cristian"
        android:textSize="16dp"
        android:layout_margin="5dp"/>

    <RadioButton
        android:id="@+id/nataly"
        android:layout_below="@+id/cristian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nataly"
        android:textSize="16dp"
        android:layout_margin="5dp"/>

    <Button
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:text="Agregar "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button" />

</RelativeLayout>
